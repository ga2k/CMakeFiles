# Gfx CMake package configuration (installed)
# Configure-time variables are substituted by configure_package_config_file.

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Common variables for consumers
set(Gfx_INCLUDE_DIR "${PACKAGE_PREFIX_DIR}/include")
set(Gfx_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/include")

# Locate the installed Gfx library
# Try standard lib locations under the package prefix
set(_Gfx_lib_paths
    "${PACKAGE_PREFIX_DIR}/${CMAKE_INSTALL_LIBDIR}"
    "${PACKAGE_PREFIX_DIR}/lib"
    "${PACKAGE_PREFIX_DIR}/lib64"
)
find_library(Gfx_LIBRARY
    NAMES HoffSoftGfx hoffsoft_gfx
    PATHS ${_Gfx_lib_paths}
    NO_DEFAULT_PATH
)
unset(_Gfx_lib_paths)

if(NOT Gfx_LIBRARY)
    set(_msg "Gfx library not found under ${PACKAGE_PREFIX_DIR}. You may need to set CMAKE_PREFIX_PATH to the Gfx installation prefix.")
    set(Gfx_FOUND FALSE)
    if(NOT DEFINED Gfx_FIND_QUIETLY)
        message(WARNING "${_msg}")
    endif()
    unset(_msg)
    return()
endif()

# Provide imported target HoffSoft::Gfx for consumers
if(NOT TARGET HoffSoft::Gfx)
    add_library(HoffSoft::Gfx UNKNOWN IMPORTED)
    set_target_properties(HoffSoft::Gfx PROPERTIES
        IMPORTED_LOCATION "${Gfx_LIBRARY}"
        INTERFACE_INCLUDE_DIRECTORIES "${PACKAGE_PREFIX_DIR}/include"
    )
endif()

# Legacy vars
set(Gfx_LIBRARIES HoffSoft::Gfx)

# End of config
