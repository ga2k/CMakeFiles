{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },
  "configurePresets": [
    {
      "name": "Debug",
      "hidden": true,
      "description": "Create a debug build",
      "cacheVariables": {
        "buildType": "Debug"
      },
      "environment": {
        "buildType": "Debug",
        "buildPath": "/debug"
      }
    },
    {
      "name": "Release",
      "hidden": true,
      "description": "Create a release build",
      "cacheVariables": {
        "buildType": "Release"
      },
      "environment": {
        "buildType": "Release",
        "buildPath": "/release"
      }
    },
    {
      "name": "Static",
      "hidden": true,
      "description": "Create a statically linked library/executable",
      "cacheVariables": {
        "linkType": "Static"
      },
      "environment": {
        "linkType": "Static",
        "linkPath": "/static"
      }
    },
    {
      "name": "Shared",
      "hidden": true,
      "description": "Create a shared library/executable",
      "cacheVariables": {
        "linkType": "Shared"
      },
      "environment": {
        "linkType": "Shared",
        "linkPath": "/shared"
      }
    },
    {
      "name": "Staged",
      "hidden": true,
      "description": "Create a staged build with STAGE_OUTPUT enabled",
      "cacheVariables": {
        "STAGE_OUTPUT": "ON"
      },
      "environment": {
        "stagePath": "/staged"
      }
    },
    {
      "name": "Windows",
      "hidden": true,
      "description": "Windows build for x64 processors",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "x86_64"
          }
        ]
      },
      "toolset": "host=x64",
      "generator": "Visual Studio 17 2022",
      "environment": {
        "hostType": "Windows",
        "hostPath": "/windows",
        "archType": "x64",
        "archPath": "/x64",
        "VCPKG_ROOT": "$env{USERPROFILE}/dev/sys/vcpkg"
      }
    },
    {
      "name": "Windows-Ninja",
      "hidden": true,
      "description": "Windows build for x64 processors using Ninja (for C++20 modules)",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "x86_64"
          }
        ]
      },
      "generator": "Ninja",
      "environment": {
        "hostType": "Windows",
        "hostPath": "/winllvm",
        "archType": "x64",
        "archPath": "/x64",
        "CMAKE_NINJA_FLAGS": "-k 0"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "CMAKE_LINKER": "lld-link",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF",
        "CMAKE_CXX_COMPILER_CLANG_SCAN_DEPS": "C:/Program Files/LLVM/bin/clang-scan-deps.exe"
      }
    },
    {
      "name": "macOS",
      "hidden": true,
      "description": "macOS build for arm64 processors",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Darwin"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "arm64"
          }
        ]
      },
      "generator": "Ninja",
      "environment": {
        "hostType": "macOS",
        "hostPath": "/macos",
        "archType": "arm64",
        "archPath": "/arm64",
        "CMAKE_NINJA_FLAGS": "-k 0"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_OSX_SYSROOT": "macosx",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "26.0",
        "CMAKE_SHARED_LINKER_FLAGS": "-L/opt/homebrew/Cellar/llvm/21.1.5/lib/c++ -Wl,-rpath,/opt/homebrew/Cellar/llvm/21.1.5/lib/c++ /opt/homebrew/Cellar/llvm/21.1.5/lib/c++/libc++.1.0.dylib /opt/homebrew/Cellar/llvm/21.1.5/lib/c++/libc++abi.dylib",
        "CMAKE_EXE_LINKER_FLAGS":    "-L/opt/homebrew/Cellar/llvm/21.1.5/lib/c++ -Wl,-rpath,/opt/homebrew/Cellar/llvm/21.1.5/lib/c++ /opt/homebrew/Cellar/llvm/21.1.5/lib/c++/libc++.1.0.dylib /opt/homebrew/Cellar/llvm/21.1.5/lib/c++/libc++abi.dylib",
        "OPENSSL_ROOT_DIR": "/opt/local",
        "OPENSSL_PATH": "/opt/local/libexec/openssl3/lib/cmake/OpenSSL",
        "OPENSSL_INCLUDE_DIR": "/opt/local/include/openssl-3",
        "OPENSSL_CRYPTO_LIBRARY": "/opt/local/lib/openssl-3/libcrypto.dylib",
        "OPENSSL_SSL_LIBRARY": "/opt/local/lib/openssl-3/libssl.dylib"
      }
    },
    {
      "name": "Linux",
      "hidden": true,
      "description": "Linux build for x64 processors",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "x86_64"
          }
        ]
      },
      "generator": "Ninja",
      "environment": {
        "hostType": "Linux",
        "hostPath": "/linux",
        "archType": "x64",
        "archPath": "/x64",
        "CMAKE_NINJA_FLAGS": "-k 0"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    },
    {
      "name": "Windows (Debug Static)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Windows",
        "Debug",
        "Static"
      ]
    },
