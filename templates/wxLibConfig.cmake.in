# wxLib CMake package configuration (installed)
# Configure-time variables are substituted by configure_package_config_file.

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Common variables for consumers
set(wxLib_INCLUDE_DIR "${PACKAGE_PREFIX_DIR}/include")
set(wxLib_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/include")

# Locate the installed wxLib library
# Try standard lib locations under the package prefix
set(_wxLib_lib_paths
    "${PACKAGE_PREFIX_DIR}/${CMAKE_INSTALL_LIBDIR}"
    "${PACKAGE_PREFIX_DIR}/lib"
    "${PACKAGE_PREFIX_DIR}/lib64"
)
find_library(wxLib_LIBRARY
    NAMES HoffSoftwxLib hoffsoft_wxlib
    PATHS ${_wxLib_lib_paths}
    NO_DEFAULT_PATH
)
unset(_wxLib_lib_paths)

if(NOT wxLib_LIBRARY)
    set(_msg "wxLib library not found under ${PACKAGE_PREFIX_DIR}. You may need to set CMAKE_PREFIX_PATH to the wxLib installation prefix.")
    set(wxLib_FOUND FALSE)
    if(NOT DEFINED wxLib_FIND_QUIETLY)
        message(WARNING "${_msg}")
    endif()
    unset(_msg)
    return()
endif()

# Provide imported target HoffSoft::wxLib for consumers
if(NOT TARGET HoffSoft::wxLib)
    add_library(HoffSoft::wxLib UNKNOWN IMPORTED)
    set_target_properties(HoffSoft::wxLib PROPERTIES
        IMPORTED_LOCATION "${wxLib_LIBRARY}"
        INTERFACE_INCLUDE_DIRECTORIES "${PACKAGE_PREFIX_DIR}/include"
    )
endif()

# Legacy vars
set(wxLib_LIBRARIES HoffSoft::wxLib)

# End of config
