{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },
  "configurePresets": [
    {
      "name": "Debug",
      "hidden": true,
      "description": "Create a debug build",
      "cacheVariables": {
        "buildType": "Debug"
      },
      "environment": {
        "buildType": "Debug",
        "buildPath": "/debug"
      }
    },
    {
      "name": "Release",
      "hidden": true,
      "description": "Create a release build",
      "cacheVariables": {
        "buildType": "Release"
      },
      "environment": {
        "buildType": "Release",
        "buildPath": "/release"
      }
    },
    {
      "name": "Static",
      "hidden": true,
      "description": "Create a statically linked library/executable",
      "cacheVariables": {
        "linkType": "Static"
      },
      "environment": {
        "linkType": "Static",
        "linkPath": "/static"
      }
    },
    {
      "name": "Shared",
      "hidden": true,
      "description": "Create a shared library/executable",
      "cacheVariables": {
        "linkType": "Shared"
      },
      "environment": {
        "linkType": "Shared",
        "linkPath": "/shared"
      }
    },
    {
      "name": "Windows",
      "hidden": true,
      "description": "Windows build for x64 processors",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "x86_64"
          }
        ]
      },
      "environment": {
        "hostType": "Windows",
        "hostPath": "/windows",
        "archType": "x64",
        "archPath": "/x64",
        "VCPKG_ROOT": "$env{USERPROFILE}/dev/sys/vcpkg"
      }
    },
    {
      "name": "macOS",
      "hidden": true,
      "description": "macOS build for arm64 processors",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Darwin"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "arm64"
          }
        ]
      },
      "environment": {
        "hostType": "macOS",
        "hostPath": "/macos",
        "archType": "arm64",
        "archPath": "/arm64"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_OSX_SYSROOT": "macosx",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.6",
        "OPENSSL_ROOT_DIR": "/opt/local",
        "OPENSSL_PATH": "/opt/local/libexec/openssl3/lib/cmake/OpenSSL",
        "OPENSSL_INCLUDE_DIR": "/opt/local/include/openssl-3",
        "OPENSSL_CRYPTO_LIBRARY": "/opt/local/lib/openssl-3/libcrypto.dylib",
        "OPENSSL_SSL_LIBRARY": "/opt/local/lib/openssl-3/libssl.dylib"
      }
    },
    {
      "name": "Linux",
      "hidden": true,
      "description": "Linux build for x64 processors",
      "condition": {
        "type": "allOf",
        "conditions": [
          {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
          },
          {
            "type": "equals",
            "lhs": "$env{CPU}",
            "rhs": "x86_64"
          }
        ]
      },
      "environment": {
        "hostType": "Linux",
        "hostPath": "/linux",
        "archType": "x64",
        "archPath": "/x64"
      }
    },
    {
      "name": "VisualStudio",
      "hidden": true,
      "description": "Visual Studio generator",
      "toolset": "host=x64,version=14.39",
      "generator": "Visual Studio 17 2022",
      "environment": {
        "generatorType": "VS",
        "generatorPath": "/vs"
      }
    },
    {
      "name": "LLVM",
      "hidden": true,
      "description": "LLVM/Clang/Ninja Toolchain",
      "generator": "Ninja",
      "environment": {
        "generatorType": "Ninja",
        "generatorPath": "/ninja",
        "CMAKE_NINJA_FLAGS": "-k 0"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    },
    {
      "name": "LLVM-macOS",
      "hidden": true,
      "description": "LLVM/Clang/Ninja Toolchain",
      "generator": "Ninja",
      "environment": {
        "generatorType": "Ninja",
        "generatorPath": "/ninja",
        "CMAKE_NINJA_FLAGS": "-k 0"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
      }
    },
    {
      "name": "Windows (Debug Static)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Windows",
        "Debug",
        "Static",
        "VisualStudio"
      ]
    },
    {
      "name": "Windows (Debug Shared)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Windows",
        "Debug",
        "Shared",
        "VisualStudio"
      ]
    },
    {
      "name": "Windows (Release Static)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Windows",
        "Release",
        "Static",
        "VisualStudio"
      ]
    },
    {
      "name": "Windows (Release Shared)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Windows",
        "Release",
        "Shared",
        "VisualStudio"
      ]
    },
    {
      "name": "MacOS (Debug Static)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "MacOS",
        "Debug",
        "Static",
        "LLVM-macOS"
      ]
    },
    {
      "name": "MacOS (Debug Shared)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "MacOS",
        "Debug",
        "Shared",
        "LLVM-macOS"
      ]
    },
    {
      "name": "MacOS (Release Static)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "MacOS",
        "Release",
        "Static",
        "LLVM-macOS"
      ]
    },
    {
      "name": "MacOS (Release Shared)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "MacOS",
        "Release",
        "Shared",
        "LLVM-macOS"
      ]
    },
    {
      "name": "Linux (Debug Shared)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Linux",
        "Debug",
        "Shared",
        "LLVM"
      ]
    },
    {
      "name": "Linux (Release Shared)",
      "cacheVariables": {
        "stemPath": "$env{buildPath}$env{linkPath}"
      },
      "binaryDir": "build$env{buildPath}$env{linkPath}",
      "inherits": [
        "Linux",
        "Release",
        "Shared",
        "LLVM"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "Windows (Debug Static)",
      "configurePreset": "Windows (Debug Static)"
    },
    {
      "name": "Windows (Debug Shared)",
      "configurePreset": "Windows (Debug Shared)"
    },
    {
      "name": "Windows (Release Static)",
      "configurePreset": "Windows (Release Static)"
    },
    {
      "name": "Windows (Release Shared)",
      "configurePreset": "Windows (Release Shared)"
    },
    {
      "name": "MacOS (Debug Static)",
      "configurePreset": "MacOS (Debug Static)"
    },
    {
      "name": "MacOS (Debug Shared)",
      "configurePreset": "MacOS (Debug Shared)"
    },
    {
      "name": "MacOS (Release Static)",
      "configurePreset": "MacOS (Release Static)"
    },
    {
      "name": "MacOS (Release Shared)",
      "configurePreset": "MacOS (Release Shared)"
    },
    {
      "name": "Linux (Debug Shared)",
      "configurePreset": "Linux (Debug Shared)"
    },
    {
      "name": "Linux (Release Shared)",
      "configurePreset": "Linux (Release Shared)"
    }
  ]
}
